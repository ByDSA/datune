{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src/",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "lib": ["es2021", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"],
  "filesGlob": ["src/**/*.ts"],
  "include": ["src/**/*.ts"],
  "types": ["node"]
}
