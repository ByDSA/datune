{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "outDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": "./src/",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "filesGlob": [
    "src/**/*.ts"
  ],
  "types": [
    "node"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ]
}