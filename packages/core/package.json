{
  "name": "@datune/core",
  "version": "0.0.1",
  "description": "Datune - core",
  "author": "Daniel Sales √Ålvarez <danisales.es@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ByDSA/datune.git",
    "directory": "packages/core"
  },
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prebuild": "pnpm build:clean && pnpm rebuild && pnpm test",
    "build": "pnpm build:raw",
    "build:raw": "tsc -p tsconfig-build.json",
    "postbuild:raw": "tsc-alias -p tsconfig-build.json",
    "build:clean": "rm -rf dist",
    "prepublishOnly": "pnpm test:coverage && pnpm lint:fix && pnpm build",
    "postpublish": "pnpm build:clean",
    "docs": "pnpm lint:fix && pnpm docs:clean && typedoc",
    "postdocs": ".scripts/docs-footer.sh",
    "docs:clean": ".scripts/docs-clean.sh",
    "docs:push": ".scripts/docs-push.sh",
    "lint:eslint": "eslint ./src/*.ts ./tests/*.ts",
    "lint:fix": "eslint ./src/*.ts --fix",
    "release": "standard-version",
    "release:push": "git push && git push --tags && pnpm docs:push",
    "readme": "pnpm readme:clean && pnpm exec readme-md-generator -p .readme/template.md -y",
    "readme:clean": "rm -f README.md"
  },
  "dependencies": {
    "@datune/utils": "file:../utils/dist",
    "chevrotain": "9.1.0",
    "immutable": "4.0.0-rc.12"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@types/jest": "27.0.3",
    "@types/node": "17.0.0",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "eslint": "8.4.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.3.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.1.2",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.3",
    "tsc-alias": "1.5.0",
    "tslib": "2.3.1",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "eslint --fix"
    ]
  },
  "standard-version": {
    "scripts": {
      "postcommit": "pnpm docs && pnpm release:push"
    }
  }
}
