{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src/",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "tests": ["../tests"],
      "tests/*": ["../tests/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"],
  "filesGlob": ["src/**/*.ts", "tests/**/*.ts"],
  "include": ["src/**/*.ts"],
  "types": ["node"]
}
