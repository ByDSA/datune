{
  "private": true,
  "name": "@datune/core-ext",
  "version": "0.0.1",
  "description": "Datune - core extension",
  "license": "UNLICENSED",
  "author": "Daniel Sales √Ålvarez <danisales.es@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ByDSA/datune.git",
    "directory": "packages/core-ext"
  },
  "scripts": {
    "prebuild": "pnpm build:clean && pnpm rebuild && pnpm test",
    "build": "pnpm build:raw",
    "build:clean": "rm -rf dist",
    "build:raw": "tsc -p tsconfig-build.json",
    "postbuild:raw": "tsc-alias -p tsconfig-build.json",
    "docs": "pnpm lint:fix && pnpm docs:clean && typedoc",
    "docs:clean": ".scripts/docs-clean.sh",
    "docs:push": ".scripts/docs-push.sh",
    "postdocs": ".scripts/docs-footer.sh",
    "prepublishOnly": "pnpm test:coverage && pnpm lint:fix && pnpm build",
    "postpublish": "pnpm build:clean",
    "readme": "pnpm readme:clean && pnpm exec readme-md-generator -p .readme/template.md -y",
    "readme:clean": "rm -f README.md",
    "release": "standard-version",
    "release:push": "git push && git push --tags && pnpm docs:push",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@datune/core": "file:../core/dist",
    "@datune/utils": "file:../utils/dist"
  },
  "devDependencies": {},
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "eslint --fix"
    ]
  },
  "standard-version": {
    "scripts": {
      "postcommit": "pnpm docs && pnpm release:push"
    }
  }
}
