{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2021",
    "typeRoots": ["../node_modules/@types"],
    "lib": ["es2021", "dom"],
    "baseUrl": "./src/",
    "paths": {
      "tests": ["../tests"],
      "tests/*": ["../tests/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "filesGlob": ["src/**/*.ts", "tests/**/*.ts"],
  "types": ["node"]
}
