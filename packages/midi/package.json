{
  "private": true,
  "name": "@datune/midi",
  "version": "0.0.0",
  "description": "Datune - the midi",
  "license": "UNLICENSED",
  "author": "Daniel Sales √Ålvarez <danisales.es@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ByDSA/datune.git",
    "directory": "packages/midi"
  },
  "scripts": {
    "build": "pnpm build:clean && pnpm build:raw",
    "build:clean": "rm -rf dist",
    "build:raw": "tsc -p tsconfig-build.json && tsc-alias -p tsconfig-build.json",
    "prepublishOnly": "pnpm test:coverage && pnpm lint:fix && pnpm build",
    "postpublish": "pnpm build:clean",
    "release": "standard-version",
    "release:push": "git push && git push --tags && pnpm docs:push",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@datune/analyzer": "file:../analyzer/dist",
    "@datune/core": "file:../core/dist",
    "@datune/utils": "file:../utils/dist",
    "@tonejs/midi": "2.0.28"
  },
  "devDependencies": {},
  "standard-version": {
    "scripts": {
      "postcommit": "pnpm docs && pnpm release:push"
    }
  }
}
